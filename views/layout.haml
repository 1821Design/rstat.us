!!! 5
%html
  %head
    %meta{:charset => "utf-8"}
    %title rstat.us
    %script{:src => "/js/jquery-1.5.1.min.js"}
    %link{:href => "/css/reset.css", :media => "screen", :rel => "stylesheet"}
    %link{:href => "/css/css3buttons.css", :media => "screen", :rel => "stylesheet"}
    %link{:href => "/css/site.css", :media => "screen", :rel => "stylesheet"}
    - if production?
      :javascript
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-22030550-1']);
        _gaq.push(['_trackPageview']);

        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(ga);
        })();
    != yield_content :javascript
  %body
    #flash
      %p= flash[:notice]
    #main
      #left
        %h2#title
          rstat.us
      #right
        != yield_content :header

        #content
          != yield 

        #user
          .user-pic
            %img{:alt => "avatar", :src => current_user.twitter_image}/
          .user-name
            %span.name= current_user.username
          .user-stats
            .following
              following: <a href="/users/#{current_user.username}/following">#{current_user.following.count}</a>
            .followers
              followers: <a href="/users/#{current_user.username}/followers">#{current_user.followers.count}</a>
            .updates
              updates: #{current_user.updates.count}

