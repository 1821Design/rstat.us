#login-forms
  #confirm
    %form{:action => "/confirm", :method => "POST"}
      %h1 Finish Signup
      %p Okay! Almost done. Pick a username and a password, please:
      .form-item
        %label{:for => "username"} Username
        %input{:id => "username", :name => "username", :size => 30, :type => "text" :value => "#{@valid_username ? @username : ''}"}
      .form-item
        %label{:for => "password"} Password
        %input{:id => "password", :name => "password", :size => 30, :type => "password"}
      .form-item
        %input{:type => "hidden", :name => "perishable_token", :value => @user.perishable_token}
      .form-item
        %input{:value => "Finish", :type => "submit", :class => "button"}
