- content_for :top do
  %form{:action => "search", :method => "GET", :name => "search_form"}
    %input#search-input{:name => "q"}
    %input#search-button.button{:type => "submit", :value => "Search"}

- content_for :javascript do
  %script{:src => "/js/update.js"}

!= haml :_navigation

#search.updates
  != haml :_updates, :locals => {:updates =>  @updates}
  %nav.pagination
    - unless @prev_page.nil?
      %a.button{:href => @prev_page, :id => "prev_button"}
        &laquo; Previous

    - unless @next_page.nil?
      %a.button{:href => @next_page, :id => "next_button"}
        Next &raquo;
