%form#update-form{ :action => "/updates", :method => "POST", :name => "update_form"}
  %h3 What's going on?
  #update-content
    %textarea#update-textarea{:name => "text"}=@update_text
  #update-info
    %input#update-referral{:type => 'hidden', :name => 'referral_id', :value => @update_id}
    - if current_user.twitter?
      %label{:for => "tweeted"}
        %img{:src => "http://a3.twimg.com/a/1301071706/images/logos/twitter_newbird_blue.png", :height => "16", :width => "16"} Tweet Me
      %input{:name => "tweeted", :id => "tweeted", :checked => "checked"}
    %input#update-button.button{:type => "submit", :value => "Share"}
    #update-count
