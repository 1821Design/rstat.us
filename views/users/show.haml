#profile
  %h3= @user.author.name
  .username
    @#{@user.author.username}

  %p= @user.author.bio
  
  - if current_user and @user != current_user
    #follow
      - if current_user.following? @user
        .negative
          %a.button{:href => "/users/#{@user.username}/unfollow"}
            Unfollow
          .follow-status You are currently following #{@user.username}
      - else
        %a.button{:href => "/users/#{@user.username}/follow"}
          Follow
        .follow-status You are not following #{@user.username}

  #updates.updates
    != haml :_updates, :locals => {:updates => @user.feed.updates.to_a.sort{|a, b| b.created_at <=> a.created_at }}
