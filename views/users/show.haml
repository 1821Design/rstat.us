#profile
  %h3= @user.author.name
  .username
    @#{@user.author.username}

  - unless @user.author.email.blank?
    .email
      Email:
      %a{:href => "mailto:#{@user.author.email}"}
        #{@user.author.email}

  - unless @user.author.website.blank?
    .website
      Website:
      %a{:href => @user.author.website}
        #{@user.author.website}

  %p= @user.author.bio

  - if current_user and @user == current_user
    %a{:href=>"/users/#{current_user.username}/edit"}
      Edit your profile

  - if current_user and @user != current_user
    #follow
      - if current_user.following? @user.feed.url
        .negative
          %a.button{:href => "/users/#{@user.username}/unfollow"}
            Unfollow
          .follow-status You are currently following #{@user.username}
      - else
        %a.button{:href => "/users/#{@user.username}/follow"}
          Follow
        .follow-status You are not following #{@user.username}

  #updates.updates
    != haml :_updates, :locals => {:updates => @user.feed.updates.to_a.sort{|a, b| b.created_at <=> a.created_at }}
