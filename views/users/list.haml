%h1 #{title}
%ul.user-list
  - @users.each_with_index do |feed, i|
    %li.user{:class => i%2 == 0 ? "even" : "odd"}
      -user_url = feed.local ? "/users/#{feed.author.username}" : feed.author.url
      .avatar
        %a{:href => user_url}
          %img{:alt => "avatar", :src => feed.author.avatar_url}/

      .name
        %a{:href => user_url}
          %b
            = feed.author.name
          %br
          (#{feed.author.username})

      - if current_user.following? feed.url
        .follow.negative
          %a.button{:href => "/users/#{feed.author.username}/unfollow", :id => "unfollow-#{feed.author.url}-#{feed.author.username}"}
            Unfollow
